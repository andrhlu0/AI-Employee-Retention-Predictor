# Application Settings
APP_NAME="AI Employee Retention Predictor"
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-change-this-in-production-minimum-32-chars-long
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///./retention_predictor.db

# For PostgreSQL (Production) - uncomment and configure when ready
# DATABASE_URL=postgresql://username:password@localhost:5432/retention_predictor_db

# For MySQL (Alternative) - uncomment if using MySQL
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/retention_predictor_db

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
WORKERS=1

# CORS Settings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://127.0.0.1:5173", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@retentionpredictor.com
EMAIL_FROM_NAME="AI Retention Predictor"

# Redis Configuration (for caching and background jobs)
REDIS_URL=redis://localhost:6379/0

# ML Model Settings
MODEL_PATH=./models/retention_model.pkl
PREDICTION_THRESHOLD=0.75
RISK_CALCULATION_INTERVAL=86400  # 24 hours in seconds
BATCH_PREDICTION_SIZE=100

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["csv", "xlsx", "xls"]
UPLOAD_FOLDER=./uploads

# Integration API Keys (HRIS Systems)
BAMBOOHR_API_KEY=
BAMBOOHR_SUBDOMAIN=
